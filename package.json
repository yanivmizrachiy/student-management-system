{
  "name": "student-management-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "sync": "pwsh -ExecutionPolicy Bypass -File scripts/sync-from-cloudflare.ps1 -Backup",
    "sync:dry": "pwsh -ExecutionPolicy Bypass -File scripts/sync-from-cloudflare.ps1 -DryRun",
    "deploy": "npm run build && vercel --prod",
    "start": "pwsh -ExecutionPolicy Bypass -File FIX_AND_START.ps1",
    "start:sync": "pwsh -ExecutionPolicy Bypass -File FIX_AND_START.ps1 -Sync"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
